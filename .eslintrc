{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__BASENAME__" : false
  },
  "rules": {
    "generator-star-spacing" : 0,
    "babel/generator-star-spacing" : 1,
    "semi" : [2, "always"],
    "max-len" : [2, 120, 2],
    "operator-linebreak" : ["error", "before"]
  }
}
